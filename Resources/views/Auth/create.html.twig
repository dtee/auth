{% extends "ShadowBundle::layout.html.twig" %}

{% block title "Register" %}

{% block content %}
	<div class="register auth">
		<h3>
			Sign Up
			<div class="small">
				It's free and always will be.
			</div>
		</h3>
	    <form method="POST" id="create_user_auth" class="form" 
	    	action="{{ path('odl_auth_auth_register') }}">
	    	
	        {{ form_widget(formView) }}
	        <input type="submit" value="Login" />
	    </form>
	    
	    <script>
	    $(document).ready(function() {
	    	$('#create_user_auth').ajaxForm();
	    });
	    </script>
    </div>
{% endblock %}
